{% include "_partials/_head.twig" %}
    {% block content %}
    {% include "_partials/_nav.twig" %}
    <div class=" mx-auto mt-20 px-4 md:px-10 xl:px-40 ">
    
        <div class="grid md:grid-cols-2 xl:grid-cols-3 gap-10 mx-auto not-prose">
            {% set menu = craft.entries().section('menuSection').limit(10) %}
            {% set entries = menu.all() %}
            {% for entry in entries %}
            <div>
                <h2 class="text-2xl md:text-3xl mb-4 md:mb-6 lg:mb-8 text-center font-bold text-indigo-900">{{ entry.title }}</h2>
                <div class="text-center md:text-sm px-4">
                {{ entry.richText }}
                </div>
                {% for block in entry.menuItem.all() %}
               
                <div class="flex justify-between gap-10 border-b my-2 pb-2">
                    <div>
                        <span class="text-lg text-gray-800">{{ block.title }}</span><br>
                        <span class="text-sm italic">{{ block.item }}</span>
                    </div>
                    <div class="flex justify-between gap-x-4">
                        {% if block.priceHero | length %}
                        <div class="text-base">{{ block.priceHero | money }}</div>
                        {% endif %}
                        {% if block.priceBagel | length %}
                        <div class="text-base">{{ block.priceBagel | money }}</div>
                        {% endif %}
                        {% if block.priceRoll | length %}
                        <div class="text-base">{{ block.priceRoll | money }}</div>
                        {% endif %}
                    </div>
                </div>
                {% endfor %}




            </div>

            {% endfor %}
        </div>
    </div>
    {% endblock %}
    {% include "_partials/_footer.twig" %}
</body>
</html>

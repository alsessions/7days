            </div>
       
    </div>

</div>

<div class="flex justify-between max-w-7xl mx-auto my-20">
{% for block in entry.triptych.all() %}
{% for asset in block.image %}         

   
    <div class="mx-auto">
        <h2 class="text-center text-4xl">{{ block.title }}<h2>
            {% if block.image | length %}
            <img src="{{ asset.url('square') }}">
            {% endif %}
    </div>
{% endfor %}
{% endfor %}
</div>


    {% endblock %}
    {% include "_partials/_footer.twig" %}
